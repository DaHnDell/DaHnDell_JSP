<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.PostMapper">
  <select id="selectList" resultType="vo.Post">
    select * from tbl_post
  </select>
  <select id="selectOne" resultType="vo.Post">
    select * from tbl_post where pno = #{pno}
  </select>
  <insert id="write">
  	insert into tbl_post (title, content, writer) values (#{title}, #{content}, #{writer})
  </insert>
</mapper>